{
  "name": "Remindrr",
  "description": "A simple extension for useful questions and reminders",
  "version": "2.0",
  "permissions": [
    "storage",
    "notifications"
  ],
  "icons": {
    "16": "assets/logo_16.png",
    "48": "assets/logo_48.png",
    "128": "assets/logo.png"
  },
  "browser_action": {
    "default_popup": "./popup.html",
    "default_icon": "./assets/logo.png"
  },
  "manifest_version": 2
}
